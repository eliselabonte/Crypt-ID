{{#if post.length}}
<div class="col-md-6 project-list">
    <h3>{{category}} Reports</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
        <div class="col-md-8">
            {{!-- link user id and username --}}
            <h4>{{post.user}}, {{post.timeFiled}}</h4>
            <p>{{post.report}}</p>
            <p>{{post.description}}</p>
            <p>{{post.timeSeen}}</p>
            <p>{{post.location}}</p>
        </div>
        {{!-- include check for if user's post before showing DELETE button --}}
        <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}

<script src="./js/blog.js"></script>